<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER">
    <TextArea fx:id="messageArea" editable="false" prefHeight="200"/>
    <TextField fx:id="recipientField" promptText="Recipient Username"/>
    <TextField fx:id="messageField" promptText="Type your message"/>
    <Button id="sendButton" text="Send" onAction="#sendMessage"/>
</VBox>
